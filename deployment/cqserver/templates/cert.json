{
    "apiVersion": "certmanager.k8s.io/v1alpha1",
    "kind": "Certificate",
    "metadata": {
        "name": "{{ .Values.FQDN | replace "." "-"}}-tls-cert"
    },
    "spec": {
        "acme": {
            "config": [
                {
                    "domains": [
                        "{{.Values.FQDN}}"
                    ],
                    "http01": {
                        "ingressClass": "nginx"
                    }
                }
            ]
        },
        "dnsNames": [
            "{{.Values.FQDN}}"
        ],
        "issuerRef": {
            "kind": "ClusterIssuer",
            "name": "http-issuer"
        },
        "secretName": "{{ .Values.FQDN | replace "." "-"}}-tls-cert"
    }
}